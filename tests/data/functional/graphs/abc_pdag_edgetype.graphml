<?xml version="1.0" encoding="UTF-8"?>
<!-- PDAG with directed and undirected edges using endpoint attributes -->
<graphml xmlns="http://graphml.graphdrawing.org/xmlns">
  <key id="se" for="edge" attr.name="sourceEndpoint" attr.type="string"/>
  <key id="te" for="edge" attr.name="targetEndpoint" attr.type="string"/>
  <graph id="G" edgedefault="directed">
    <node id="A"/>
    <node id="B"/>
    <node id="C"/>
    <edge source="A" target="B">
      <data key="se">line</data>
      <data key="te">arrow</data>
    </edge>
    <edge source="B" target="C">
      <data key="se">line</data>
      <data key="te">line</data>
    </edge>
  </graph>
</graphml>
